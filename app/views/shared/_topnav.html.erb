<nav class="navbar navbar-default">
  <div class="nav-container">
    <div class="navbar-header">
      <a class="navbar-brand" href="/">CareerPlug</a>
    </div>
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <% if current_user.present? %>
        <ul class="nav navbar-nav">
          <li><%= link_to "All Jobs", jobs_path %></li>
          <li><a href="/jobs/new">Post a Job</a></li>
        </ul>
        <%= form_tag(jobs_path, :method => "get", class: "navbar-form navbar-left", id: "search-form") do %>
          <div class="input-append">
            <%= text_field_tag :search, params[:search], class: "clearable", placeholder: "Search Jobs" %>
            <!-- In order to have the "search" icon int the button, we need to use plain HTML instead
                 of using a Rails form helper -->
            <button type="submit" class="btn btn-default">Submit</button>
          </div>
        <% end %>
      <% end %>
      <ul class="nav navbar-nav navbar-right">
        <% if current_user.present? %>
          <li><%= link_to 'Sign Out', destroy_user_session_path, method: :delete %></li>
        <% else %>
          <li><%= link_to 'Sign In', new_user_session_path %></li>
          <li><%= link_to 'Sign Up', new_user_registration_path %></li>
        <% end %>
      </ul>
    </div>
  </div>
</nav>
